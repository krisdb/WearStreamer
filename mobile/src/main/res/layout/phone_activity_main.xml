<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    >

    <Button
        android:id="@+id/btn_import_opml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:text="Import OPML"
        android:textSize="12dp"
        android:layout_above="@+id/tv_version"
        android:layout_alignStart="@+id/btn_import_podcast"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/tv_import_podcast_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/tv_import_podcast_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="text"
        android:hint="URL"
        android:layout_below="@+id/tv_import_podcast_title"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_import_podcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Podcast"
        android:layout_below="@+id/tv_import_podcast_link"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_centerInParent="true" />

</RelativeLayout>